{
  "hosting": {
    "public": "fitness-tracker/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "firestore": {
    "rules": "fitness-tracker/firestore.rules"
  },
  "storage": {
    "rules": "fitness-tracker/storage.rules"
  }
}
